  "devDependencies": {
    "@finance-calculator/typescript-configs": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.16.0",
    "globals": "^15.12.0",
    "tsx": "^4.7.0",
    "nodemon": "^2.0.22",
    "typescript": "^5.3.0"
  }
}
