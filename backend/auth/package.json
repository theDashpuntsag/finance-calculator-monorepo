{
  "name": "@finance-calculator/backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API for Finance Calculator",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,js --exec \"tsx src/index.ts\"",
    "format": "prettier --write .",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
